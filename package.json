    "test:e2e:headed": "node node_modules/@playwright/test/cli.js test --headed",
    "test:all": "node scripts/run-tests.js",
    "test:ci": "node scripts/run-tests.js --ci",
    "audit": "node scripts/audit.js",
    "audit:security": "node scripts/audit.js --security",
    "audit:performance": "node scripts/audit.js --performance",
